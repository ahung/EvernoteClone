<br>
<div class="row">
  <div class="col-xs-2 col-xs-offset-1">
    <button class="btn btn-primary" id="new-note"> + Note </button>
  </div>
  
  <div class="col-xs-4 col-xs-offset-1">
    <div class="btn-group">
      <button class="btn btn-default dropdown-toggle" type="button" 
        data-toggle="dropdown" id="notebook-dropdown"><span class="caret">
        </span> <%= notes.notebook.escape("name") %></button>
      <div class="dropdown-menu">
        <span class="label label-danger" id="notebook-rename-error"></span>
        <form class="text-center" id="edit-notebook" data-id="<%= notes.notebook.id %>"> 
          <div class="form-group">
            <input type="text" class="form-control" name="notebook[name]" 
              id="notebook_name" placeholder="<%= notes.notebook.escape('name')%>">
          </div>
  
          <input type="submit" class="btn btn-default" 
            value="Rename Notebook">
        </form>
      </div>
    </div>
  </div>
  
  <div class="col-xs-3 col-xs-offset-1">
    <button class="btn btn-danger" data-toggle="modal" 
      data-target="#delete-notebook-modal"><span 
        class="glyphicon glyphicon-trash"></span></button>
  </div>
</div>

<hr>
<div class="bs-sidebar">
  <ul class="nav bs-sidebar nav-pills nav-stacked">
    <% notes.each(function (note) { %>
      <li class="drag-note" data-id="<%= note.id %>">
        <a href="#" class="note-link" data-id="<%= note.id %>"><span 
        class="glyphicon glyphicon-file"> <%= note.escape("title") %></a></li>
    <% }); %>
  </ul>
</div>

<div class="modal" id="delete-notebook-modal">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h4> Confirm Notebook Deletion </h4>
      </div>
      <div class="modal-body">
        <p> Are You Sure You Want To Delete 
        '<%= notes.notebook.escape("name") %>' and All The Notes In It? </p>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-default" data-dismiss="modal">
          Cancel</button>
        <button type="button" class="btn btn-danger" data-dismiss="modal" 
          id="delete-notebook" data-id="<%= notes.notebook.id %>">
            Delete </button>
      </div>
    </div>
  </div>
</div>

<script type="text/javascript">
  $(".dropdown-toggle").dropdown();
  $(".dropdown-menu").find('form').click(function (event) {
    event.stopPropagation();
  });
</script>